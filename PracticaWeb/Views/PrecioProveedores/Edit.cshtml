@model PracticaWeb.Models.PrecioProveedores

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12">
    <div class="row">
        <div class="col-6">
            <h1>Editar</h1>
        </div>
        <div class="col-6">
            <a asp-controller="Productos" asp-action="Index" class="btn btn-danger position-absolute" style="right:7.5%; translateY(-50%);">Volver </a>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID_Precio" />
            <div class="form-group">
                <label asp-for="ID_Producto" class="control-label"></label>
                <input asp-for="ID_Producto" class="form-control" />
                <span asp-validation-for="ID_Producto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ID_Proveedor" class="control-label"></label>
                <input asp-for="ID_Proveedor" class="form-control" />
                <span asp-validation-for="ID_Proveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveProveedor" class="control-label"></label>
                <input asp-for="ClaveProveedor" class="form-control" />
                <span asp-validation-for="ClaveProveedor" class="text-danger"></span>
            </div>
            <p>&ensp;</p>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

